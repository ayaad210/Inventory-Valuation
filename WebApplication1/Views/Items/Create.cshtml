@model businessLayer.Dtos.Item.ItemCreateDto

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
       
    ViewData["Title"] = "Create";
}

<h1>Create Item</h1>

<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" asp-controller="Items" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label" > Item Name</label>
                <input asp-for="Name" class="form-control" name="Name" required id="Name" />
                <span asp-validation-for="Name" data-valmsg-for="Name"
                      data-valmsg-replace="true" class="text-danger"></span>
            </div>
   <br />
   <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}
