@model businessLayer.Dtos.Request.RequestCreateDto
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Requests" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"  ></div>
            <div class="form-group">

                <label class="control-label">  Select Item </label>

            @Html.DropDownList(expression: "ItemId",selectList: (IEnumerable
                <SelectListItem>)ViewData["Items"] ,new { @class = "form-control ", @required="required"} )
                <span asp-validation-for="ItemId" class="text-danger "></span>
      </div>
            <div class="form-group">
                <label  class="control-label">  Count</label>
                <input type="number" asp-for="count" class="form-control" name="count" id="count" required />
                <span asp-validation-for="count" data-valmsg-for="count" 
                      data-valmsg-replace="true" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"> Unit Price </label>
                <input type="number" asp-for="price" class="form-control" name="price" id="price" required />
                <span asp-validation-for="price" data-valmsg-for="price"
                      data-valmsg-replace="true" class="text-danger "></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}


